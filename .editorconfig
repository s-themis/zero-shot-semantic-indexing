# Not searching in parent directories
root = true

# Style for all file types
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
curly_bracket_next_line = false
spaces_around_operators = true
insert_final_newline = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 2

# 2 space indentation
[*.{js,json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
